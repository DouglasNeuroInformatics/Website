---
import { Image } from 'astro:assets';

import { cn } from '@/utils/cn';

type Props = {
  alt: string;
  class?: string;
  src: ImageMetadata;
};

const { class: className, ...props } = Astro.props;
---

<Image
  class={cn(
    'bg-gray-200 object-cover shadow-xs rounded-full border border-gray-300 dark:border-gray-600 dark:bg-gray-700',
    className
  )}
  {...props}
/>
